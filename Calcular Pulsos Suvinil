<body>

<div class="card">
    <div class="title">Calculadora Gix</div>

    <label for="pulsos">Pulsos da máquina</label>
    <input type="number" id="pulsos" placeholder="Ex: 9932">

    <button onclick="calcular()">Calcular</button>

    <div class="result">
        <span>Resultado Gix (900 ml)</span>
        <strong id="resultado">0</strong>
    </div>

    <div class="footer">
        1 pulso = 0,154 ml<br>
        1 Gix = 900 ml
    </div>
</div>

<script>
function formatarNumero(valor) {
    const inteiro = Math.floor(valor);
    const decimal = valor - inteiro;

    if (decimal === 0) {
        return inteiro.toString();
    }

    // Verifica se com 2 casas já é exato
    const duasCasas = Number(valor.toFixed(2));
    if (Math.abs(valor - duasCasas) < 0.00001) {
        return duasCasas.toFixed(2);
    }

    // Caso contrário, mostra até 4 casas sem arredondar
    return Math.floor(valor * 10000) / 10000;
}

function calcular() {
    const pulsos = document.getElementById("pulsos").value;

    if (pulsos === "" || pulsos <= 0) {
        document.getElementById("resultado").innerText = "0";
        return;
    }

    const gix = (pulsos * 0.154) / 900;
    document.getElementById("resultado").innerText = formatarNumero(gix);
}
</script>

